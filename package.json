{
  "name": "megawave",
  "version": "1.0.0",
  "type": "module",
  "description": "Monorepo for the Megawave music streaming platform",
  "scripts": {
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "dev": "turbo dev --ui tui",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"packages/**/*.{ts,tsx}\"",
    "db:push": "drizzle-kit push --config packages/db/drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config packages/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config packages/db/drizzle.config.ts",
    "db:clean": "rimraf db/megawave.db",
    "clean": "rimraf node_modules dist packages/**/dist packages/**/node_modules"
  },
  "keywords": [],
  "author": "Tony Powell <powell.anthonyd@proton.me>",
  "license": "MIT",
  "dependencies": {
    "turbo": "^2.5.4-canary.0"
  },
  "packageManager": "pnpm@10.11.0",
  "pnpm": {
    "overrides": {
      "rollup": "npm:@rollup/wasm-node"
    }
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "drizzle-kit": "^0.31.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  }
}
